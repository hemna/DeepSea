
/etc/prometheus/ses/mgr_exporter.yml:
  file.managed:
    - user: prometheus
    - group: prometheus
    - mode: 644
    - makedirs: True
    - fire_event: True
    - source: salt://ceph/monitoring/prometheus/cache/mgr_exporter.yml

{% for minion in salt.saltutil.runner('select.minions', cluster='ceph', host=False) %}
/etc/prometheus/ses/node_{{ minion }}.yml:
  file.managed:
    - user: prometheus
    - group: prometheus
    - mode: 644
    - makedirs: True
    - fire_event: True
    - source: salt://ceph/monitoring/prometheus/cache/{{ minion }}.yml
{% endfor %}
